<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

    <TextView
        android:id="@+id/team_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="TeamNumber"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/team_rookie_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rookie Year: 2015"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintLeft_toLeftOf="@+id/team_number"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/team_location" />

    <TextView
        android:id="@+id/team_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Location: Flanders, NJ"
        app:layout_constraintLeft_toLeftOf="@+id/team_number"
        app:layout_constraintTop_toBottomOf="@+id/team_number" />
</android.support.constraint.ConstraintLayout>